# Define variables
R_SCRIPT = scripts/R/data_wrangling.R
DATA_DIR = data/prep/prl
OUTPUT_DIR = data/prep/prl
CSV_DATA = $(DATA_DIR)/groundhog_raw.csv
FINAL_OUTPUT = $(OUTPUT_DIR)/groundhog_clean.csv

# Default target
all: $(FINAL_OUTPUT)

# Rule to create the final output
$(FINAL_OUTPUT): $(CSV_DATA) $(R_SCRIPT)
	@echo "Running R script to process data..."
	Rscript --vanilla $(R_SCRIPT)

# Rule to clean up the output
clean:
	@echo "Cleaning up..."
	rm -f $(FINAL_OUTPUT)

.PHONY: all clean
